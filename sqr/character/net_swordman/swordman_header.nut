function getAttackCancelStartFrameSize_Swordman(obj)
{
	local maxAttackNumber = obj.sq_GetAttackCancelStartFrameSize();
	local isAppendApd_dark = CNSquirrelAppendage.sq_IsAppendAppendage(obj, "character/swordman/swordghost6/ap_dark.nut");
	local isAppendApd_rad = CNSquirrelAppendage.sq_IsAppendAppendage(obj, "character/swordman/swordghost6/ap_rad.nut");
	
	if(isAppendApd_rad)
	{
			maxAttackNumber = 1;
			return maxAttackNumber;
	}
	else if(isAppendApd_dark)
	{
			maxAttackNumber = 1;
			return maxAttackNumber;
	}
	else if(!isAppendApd_rad)
	{
			maxAttackNumber = 2;
			return maxAttackNumber;
	}

	return maxAttackNumber;
}


