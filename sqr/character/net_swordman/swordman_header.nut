function getAttackAni_Swordman(obj, index)
{
	if (!obj)
	
	return null;

	//---------Ghost_Dark_Attack---------
	local isAppendApd_dark = CNSquirrelAppendage.sq_IsAppendAppendage(obj, "character/swordman/swordghost6/ap_dark.nut");
	if(isAppendApd_dark)
	{
		local animation = obj.sq_GetAttackAni(index);
	
		local skillLevel = obj.sq_GetSkillLevel(SKILL_SWORD_GHOST_6);
	
		if (skillLevel > 0)
	
		animation = obj.sq_GetCustomAni(CUSTOM_ANI_GHOST_CHANGE_DARK_ATTACK1 + index);
	
	return animation;
	}
	//---------Ghost_Rad_Attack---------
	local isAppendApd_rad = CNSquirrelAppendage.sq_IsAppendAppendage(obj, "character/swordman/swordghost6/ap_rad.nut");
	if(isAppendApd_rad)
	{
		local animation = obj.sq_GetAttackAni(index);
	
		local skillLevel = obj.sq_GetSkillLevel(SKILL_SWORD_GHOST_6);
	
		if (skillLevel > 0)
	
		animation = obj.sq_GetCustomAni(CUSTOM_ANI_GHOST_CHANGE_RAD_ATTACK1 + index);
	
	return animation;
	}
	//---------None_Attack---------

	if(!isAppendApd_rad)
	{
    local animation = obj.sq_GetAttackAni(index);

	animation = obj.sq_GetCustomAni(91 + index);
	
	return animation;
	}

	//---------None_Attack---------

		return animation;
}

